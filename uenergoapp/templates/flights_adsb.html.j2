<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ADSB DATA</title>
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename = 'style_adsb.css', _external=True) }}">
    <script src="{{ url_for('static', filename = 'request_script.js') }}"></script>
</head>


<body>
<div class="main-container">

    <div class="dropdown-menu">

        <div class="logo">
            <h4>ADSB:DATA></h4>
            <p id="live_flights_count"></p>
        </div>

        <div class="flights">
            <button type="button" name="button" class="active">Flights</button>
            <ul>
                <li><a href="https://www.google.com">First item</a></li>
                <li><a href="#">Second item</a></li>
                <li><a href="#">Third item</a></li>
            </ul>
        </div>

        <div class="map">
            <button type="button" name="button">Map</button>
        </div>

        <div class="api">
            <button type="button" name="button">API</button>
        </div>

    </div>

    <div class="paginate-shelve">

        <div class="paginate-card">
            {% if active_page == 1 %}
                <a href="{{ url_for('flights', page = active_page) }}"> < </a>
            {% else %}
                <a href="{{ url_for('flights', page = active_page - 1) }}"> < </a>
            {% endif %}
        </div>

        {% for page in pages %}

            <div class="paginate-card {% if page == active_page %} {{ 'active-card' }} {% endif %}">
                <a href="{{ url_for('flights', page = page) }}"> {{ page }} </a>
            </div>

        {% endfor %}

        <div class="paginate-card">
            <a href="{{ url_for('flights', page = active_page + 1) }}"> > </a>
        </div>


    </div>


    <div class="flight-card title">
        <p class="icao24">ICAO</p>
        <p class="callsign">Callsign</p>
        <p class="country">Origin country</p>
        <p class="time-position">1570863076</p>
        <p class="last-contact">157086307</p>
        <p class="longitude">Longitude</p>
        <p class="latitude">Latitude</p>
        <p class="baro-altitude">Altitude</p>
        <p class="on-ground">onground</p>
        <p class="velocity">275.82</p>
        <p class="true-track">276.93</p>
        <p class="vertical-rate">-11.38</p>
    </div>


    <div class="content">

        {% for Id, icao24, callsign, origin_country, time_position, last_contact, longitude, latitude, baro_altitude, on_ground, velocity, true_track, vertical_rate in flight_states %}
            <div class="flight-card">
                <!--<p style="width:5%">{{Id}}</p>-->
                <p class="icao24">{{ icao24 }}</p>
                <p class="callsign">{{ callsign }}</p>
                <p class="country">{{ origin_country }}</p>
                <p class="time-position">{{ time_position }}</p>
                <p class="last-contact">{{ last_contact }}</p>
                <p class="longitude">{{ longitude }}</p>
                <p class="latitude">{{ latitude }}</p>
                <p class="baro-altitude">{{ baro_altitude }}</p>
                <p class="on-ground">{{ on_ground }}</p>
                <p class="velocity">{{ velocity }}</p>
                <p class="true-track">{{ true_track }}</p>
                <p class="vertical-rate">{{ vertical_rate }}</p>
            </div>
        {% endfor %}


    </div>

</div>
</body>
