{% extends "blog_base.j2" %}

{% block posts %}

    {% for post in posts %}

        <div class="panel panel-primary">
            <div class="panel-heading">Created {{ post.created_time }} User {{ post.user_id }}</div>
            <div class="panel-body">{{ post.post_text }}</div>
            <div class="panel-footer">
                <button type="button" class="btn btn-success">Primary <span class="badge">7</span></button>
                <button type="button" class="btn btn-danger">Primary <span class="badge">7</span></button>

            </div>
        </div>

    {% endfor %}

    <form data-toggle="validator" role="form" method="post">
        {{ form.csrf_token }}
        <div class="form-group has-feedback">
            {{ form.post_text.label(class='control-label') }}
            <!--<div class="input-group">-->
            {{ form.post_text(class='form-control') }}
            <!--</div>-->
            <!--<span class="glyphicon form-control-feedback" aria-hidden="true"></span>-->
            <div class="help-block with-errors">Enter you message here</div>
        </div>


        <div class="form-group">
            {{ form.submit(class="btn btn-primary") }}
        </div>
    </form>


{% endblock %}